@model WebHotel.Models.Booking

@{
    ViewData["Title"] = "Admin Create";
}

<h2>Book a Room</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AdminCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomID" class="control-label"></label>
                <select asp-for="RoomID" class="form-control" asp-items="ViewBag.RoomID"></select>
            </div>
            
            <div class="form-group">
                <label asp-for="CustomerEmail" class="control-label"></label>
                <select asp-for="CustomerEmail" class="form-control" asp-items="ViewBag.CustomerEmail"></select>
            </div>
            
            <div class="form-group">
                <label asp-for="CheckIn" class="control-label"></label>
                <input asp-for="CheckIn" class="form-control" />
                <span asp-validation-for="CheckIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckOut" class="control-label"></label>
                <input asp-for="CheckOut" class="form-control" />
                <span asp-validation-for="CheckOut" class="text-danger"></span>
            </div>
            @if (ViewBag.Error != null)
            {
                <div class="form-group">
                    <span class="text-danger">@ViewBag.Error</span>
                </div>
            }
            else if (ViewBag.DateError != null)
            {
                <div class="form-group">
                    <span class="text-danger">@ViewBag.DateError</span>
                </div>

            }

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ManageBookings">Back to List</a>
</div>

@if (ViewBag.RoomFloor != null)
{
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            You have booked room:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RoomID)
        </dd>
        <dt>
            Level:
        </dt>
        <dd>
            @ViewBag.RoomFloor
        </dd>
        <dt>
            For User:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CustomerEmail)
        </dd>
        <dt>
            Check in date:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CheckIn)
        </dd>
        <dt>
            Check out date:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CheckOut)
        </dd>
        <dt>
            Total cost:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cost)
        </dd>
    </dl>
</div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
