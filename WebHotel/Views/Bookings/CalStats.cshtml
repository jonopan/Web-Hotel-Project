@model IEnumerable<WebHotel.Models.CalStats>

@{
    ViewData["Title"] = "Statistics";
}

<h2>Booking distribution with respect to rooms</h2>
<br />

<div>
    <table class="table">
        @* .table is a Bootstrap class giving table styles *@
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.RoomID)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.NumberOfBookings)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfBookings)
                </td>
            </tr>
        }
    </table>
</div>
