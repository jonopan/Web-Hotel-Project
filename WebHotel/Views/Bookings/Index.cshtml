@model IEnumerable<WebHotel.Models.Booking>

@using Microsoft.AspNetCore.Identity

@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Index";
}

<h2>Your Bookings</h2>

<h4>All bookings under user: <b>@UserManager.GetUserName(User) </b></h4>
<p>
    <a asp-action="Create">Book A Room</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TheCustomer.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TheCustomer.GivenName)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortorder="@ViewData["NextRoomOrder"]">
                    @Html.DisplayNameFor(model => model.TheRoom)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortorder="@ViewData["CheckInOrder"]">
                    @Html.DisplayNameFor(model => model.CheckIn)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortorder="@ViewData["CheckOutOrder"]">
                    @Html.DisplayNameFor(model => model.CheckOut)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortorder="@ViewData["NextCostOrder"]">
                    @Html.DisplayNameFor(model => model.Cost)
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.TheCustomer.Surname)
                </td>
                <td>
                    @Html.DisplayFor(model => item.TheCustomer.GivenName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TheRoom.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheckIn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheckOut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
            </tr>
        }
    </tbody>
</table>
