@{
    ViewData["Title"] = "Home Page";
}


<style>
    img {
        width: 100%;
    }

    @@media (min-width: 576px) {
        .col-8, .col-4 {
            float: left;
        }

        .col-8 {
            width: 66.666667%;
        }

        .col-4 {
            width: 33.333333%;
        }
    }
</style>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="2000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/wsh1.png" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Dining
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/wsh2.png" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Views from hotel
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/wsh3.png" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                     Luxury Rooms
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/wsh4.png" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Standard King Rooms
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-8">
        <h2>Welcome to the Western Sydney Hotel</h2>
    </div>
    <div class="col-4">
        <h2>Useful Links</h2>
        <ul>
        </ul>
    </div>
</div>